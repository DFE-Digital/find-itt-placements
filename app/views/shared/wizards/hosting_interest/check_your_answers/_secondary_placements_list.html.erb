<%# locals: { wizard:, current_step: } -%>
<%= govuk_summary_list(html_attributes: { id: "secondary_placements" }) do |summary_list| %>
  <% summary_list.with_row do |row| %>
    <% row.with_key(text: t(".subject")) %>
    <% row.with_value do %>
      <%= govuk_list do %>
        <% current_step.selected_secondary_subjects.each do |secondary_subject| %>
          <% if secondary_subject == AddHostingInterestWizard::UNKNOWN_OPTION %>
            <li><%= t(".unknown") %></li>
          <% elsif secondary_subject.has_child_subjects? %>
            <li><%= secondary_subject.name %> - <%= current_step.child_subject_names(subject: secondary_subject).to_sentence %></li>
          <% else %>
            <li><%= secondary_subject.name %></li>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <% row.with_action(text: t("change"),
                       href: step_path(:secondary_subject_selection),
                       visually_hidden_text: t(".secondary_placements"),
                       classes: ["govuk-link--no-visited-state"]) %>
  <% end %>
<% end %>
