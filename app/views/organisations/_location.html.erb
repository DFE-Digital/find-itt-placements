<h1 class="govuk-heading-l"><%= "Location" %></h1>
<%= render MapComponent.new(
  organisations: [organisation],
  base_latitude: organisation.latitude,
  base_longitude: organisation.longitude,
) %>

<%= govuk_summary_list(actions: false) do |summary_list| %>
  <% summary_list.with_row do |row| %>
    <% row.with_key(text: t(".address")) %>
    <% row.with_value(**value_or_unknown(value: organisation.address_string)) %>
  <% end %>
<% end %>
