<%= govuk_summary_list(actions: false) do |summary_list| %>
  <% summary_list.with_row do |row| %>
    <% row.with_key(text: t(".organisation_name")) %>
    <% row.with_value(text: organisation.name) %>
  <% end %>

  <% summary_list.with_row do |row| %>
    <% row.with_key(text: t(".ukprn")) %>
    <% row.with_value(**value_or_unknown(value: organisation.ukprn)) %>
  <% end %>
  <% summary_list.with_row do |row| %>
    <% row.with_key(text: t(".urn")) %>
    <% row.with_value(text: organisation.urn) %>
  <% end %>
  <% summary_list.with_row do |row| %>
    <% row.with_key(text: t(".telephone_number")) %>
    <% row.with_value(**value_or_unknown(value: organisation.telephone)) %>
  <% end %>
  <% summary_list.with_row do |row| %>
    <% row.with_key(text: t(".website")) %>
    <% if organisation.website.present? %>
      <% row.with_value do %>
        <%= govuk_link_to(organisation.website,
                          organisation.website,
                          new_tab: true) %>
      <% end %>
    <% else %>
      <% row.with_value(text: t(".unknown"), classes: "govuk-hint") %>
    <% end %>
  <% end %>
<% end %>
